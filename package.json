{
  "name": "reactNativeBoilerplate",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "ios": "react-native run-ios",
    "android": "react-native run-android",
    "format": "prettier --config .prettierrc --write 'src/**/*.{js,jsx}'",
    "lint-staged": "lint-staged",
    "preclean": "watchman watch-del-all && rm -rf node_modules && yarn",
    "clean": "rm -rf /tmp/metro-bundler-cache-* && rm -rf /tmp/haste-map-react-native-packager-*",
    "remetro": "watchman watch-del-all && yarn start --reset-cache",
    "lint": "esw src --color",
    "lint:watch": "yarn lint --clear --watch"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "change-case-object": "^2.0.0",
    "prop-types": "^15.6.2",
    "query-string": "^6.2.0",
    "react": "16.6.1",
    "react-native": "0.57.5",
    "react-native-paper": "^2.2.5",
    "react-native-vector-icons": "^6.1.0",
    "react-navigation": "^2.18.2",
    "react-redux": "^5.1.1",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.2"
  },
  "devDependencies": {
    "babel-jest": "^24.5.0",
    "jest": "^24.5.0",
    "metro-react-native-babel-preset": "^0.53.1",
    "react-test-renderer": "^16.8.4",
    "redux-mock-store": "^1.5.3"
  },
  "jest": {
    "preset": "react-native",
    "collectCoverage": true,
    "coverageDirectory": "__coverage__",
    "transform": {
      "^.+\\.js$": "<rootDir>/jest.preprocessor.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|native-base|react-navigation|react-native-fabric|react-native-paper)"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --config .prettierrc --write",
      "git add"
    ]
  },
  "*.json": [
    "prettier --parser json --write",
    "git add"
  ],
  "rnpm": {
    "assets": [
      "./assets/fonts"
    ]
  }
}
