{
  "parser": "babel-eslint",
  "plugins": [
    "react", 
    "react-native"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "settings": {
    "react": {
      "version": "16.4.1"
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended", 
    "plugin:react/recommended", 
    "airbnb-base",     
    "prettier",
    "prettier/react"
    ],
  "rules": {
    "global-require": 0,
    "no-console": 0,
    "no-use-before-define": 0,
    "react/display-name": 0,
    "class-methods-use-this": 0,
    "consistent-return": 0,
    "no-else-return": 0,
    "prefer-destructuring": 0
  }
}
